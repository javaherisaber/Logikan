<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onSimpleButtonClickListener"
            type="ir.logicfan.core.ui.viewholder.ViewHolderListener.OnSimpleButtonClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_core_itemStateMoreError_retry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> onSimpleButtonClickListener.onSimpleButtonClick()}"
            android:src="@drawable/core_ic_all_retry" />
    </LinearLayout>
</layout>