<resources>
    <!--
    # CODE OF CONDUCT
    NEVER directly reference these colors in your application because doing so will result in coupled resources
    and makes your resources less flexible to change
    you can use inherit your own theme from these styles
    -->

    <!-- Chip -->
    <style name="Core.Widget.Chip.Decoration" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">?attr/core_chipCornerRadius</item>
        <item name="android:textAppearance">?attr/core_chipTextAppearance</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:checkable">false</item>
        <item name="android:selectable">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Core.Widget.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">?attr/core_chipCornerRadius</item>
        <item name="android:textAppearance">?attr/core_chipTextAppearance</item>
        <item name="closeIconVisible">true</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Core.Widget.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layoutDirection">ltr</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">@dimen/core_stroke_default</item>
        <item name="chipBackgroundColor">@color/core_bg_all_chip_choice</item>
        <item name="android:textAppearance">?attr/core_chipTextAppearance</item>
        <item name="chipIcon">@drawable/core_ic_all_dot_black_8dp</item>
        <item name="chipCornerRadius">?attr/core_chipCornerRadius</item>
        <item name="chipIconSize">8dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@color/core_tint_all_chip_choice</item>
        <item name="android:textColor">@color/core_tint_all_chip_choice</item>
    </style>
    <!-- End of Chip -->

    <!-- EditText -->
    <style name="Core.Base.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Core.Widget.EditText" parent="Core.Base.Widget.EditText" />

    <style name="Core.Widget.EditText.Disabled">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="Core.Widget.EditText.Spinner" parent="Core.Widget.EditText.Disabled">
        <item name="drawableEndCompat">@drawable/core_ic_all_drop_down_grey_24dp</item>
    </style>
    <!-- End of EditText -->

    <!-- ImageView -->
    <style name="Core.Widget.ImageView.Icon" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
    <!-- End of ImageView -->

    <!-- TextInputLayout -->
    <style name="Core.Widget.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/core_colorWhite</item>
        <item name="hintTextAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="Core.Widget.TextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/core_colorWhite</item>
        <item name="hintTextAppearance">?attr/textAppearanceSubtitle1</item>
    </style>
    <!-- End of TextInputLayout -->

    <!-- ExtendedFab -->
    <style name="Core.Widget.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/core_colorWhite</item>
        <item name="android:textColor">@color/core_colorWhite</item>
        <item name="iconPadding">@dimen/core_padding_medium</item>
        <item name="android:paddingStart">@dimen/core_padding_medium</item>
    </style>
    <!-- End of ExtendedFab -->
</resources>
